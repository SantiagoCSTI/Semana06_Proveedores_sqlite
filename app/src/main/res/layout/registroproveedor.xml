<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registroproveedorXML"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="4dip">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <ImageView
                android:id="@+id/imgFotoALUMNO"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@id/TVRAZONSOCIAL_ITEM"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:src="@drawable/logolibertecsmall" />

            <TextView
                android:id="@+id/TVRUC_ITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVRAZONSOCIAL_ITEM"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="TVRUC_ITEM" />

            <TextView
                android:id="@+id/tvITEMCODIGOPROVEEDOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="tvITEMCODIGOPROVEEDOR" />

            <TextView
                android:id="@+id/TVRAZONSOCIAL_ITEM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvITEMCODIGOPROVEEDOR"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="TVRAZONSOCIAL_ITEM"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
